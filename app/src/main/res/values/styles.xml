<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="FioriTheme.AppBarOverlay" />

    <style name="AppTheme.PopupOverlay" parent="FioriTheme.PopupOverlay" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/button_toggle</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MatTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/dark_green</item>
        <item name="hintTextColor">@color/dark_green</item>
        <!--        <item name="endIconTint">@color/dark_blue</item>-->
    </style>
    <style name="QText" parent="FioriTheme.AppBarOverlay">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="ProductsSelectedInput">
        <item name="android:textColor">@color/blue_text</item>
    </style>

    <style name="ProductsNotSelectedInput">
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#0A6ED1</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#0A6ED1</item>
    </style>
    <style name="Checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/purple_700</item>
    </style>
</resources>